{% extends 'base.html.twig' %}

{% block title %}Ordered{% endblock %}

{% block body %}
<h1>Ordered</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ ordered.id }}</td>
        </tr>
        <tr>
            <th>Created_at</th>
            <td>{{ ordered.createdAt ? ordered.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Total_price</th>
            <td>{{ ordered.totalPrice }}</td>
        </tr>
        <tr>
            <th>Validated</th>
            <td>{{ ordered.validated ? 'Yes' : 'No' }}</td>
        </tr>
    </tbody>
</table>


<div class="my-4">

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id Détail</th>
                <th scope="col">Nom Produit</th>
                <th scope="col">Quantité commandée</th>
            </tr>
        </thead>
        <tbody>

            {% for detail in details %}
            <tr>
                <td>{{detail.id}}</td>
                <td>{{detail.stock.product.name}}</td>
                <td>{{detail.quantity}}</td>
            </tr>
            {% endfor %}

        </tbody>
    </table>

</div>


<a href="{{ path('ordered_index') }}">back to list</a>

<a href="{{ path('ordered_edit', {'id': ordered.id}) }}">edit</a>

