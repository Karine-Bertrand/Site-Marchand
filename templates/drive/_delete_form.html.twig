<form method="post" action="{{ path('drive_delete', {'id': drive.id}) }}" onsubmit="return confirm('Etrs-vous certain de vouloir supprimer ce point relais ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ drive.id) }}">
    <button class="btn btn-sm"><i class="fa fa-trash-o"></i></button>
</form>
