{% extends 'base.html.twig' %}

{% block title %}Stock index
{% endblock %}

{% block body %}
	<h1>Stock index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Price</th>
				<th>Quantity</th>
				<th>Conditioning</th>
				<th>Description</th>
				<th>Validated</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for stock in stocks %}
				<tr>
					<td>{{ stock.id }}</td>
					<td>{{ stock.price }}</td>
					<td>{{ stock.quantity }}</td>
					<td>{{ stock.conditioning }}</td>
					<td>{{ stock.description }}</td>
					<td>{{ stock.validated ? 'Yes' : 'No' }}</td>
					<td>
						<a href="{{ path('stock_show', {'id': stock.id}) }}">show</a>
						<a href="{{ path('stock_edit', {'id': stock.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('stock_new') }}">Create new</a>
{% endblock %}

